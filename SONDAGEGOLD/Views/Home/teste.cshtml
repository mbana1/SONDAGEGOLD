</head>

<body id="CorpDepage">
    <header>
        <!-- en tête de page -->

        <nav class="navbar">
            <ul>
                <li class="actif"><a role="button" href="@Url.Action("Index")">Home</a></li>
                <li><a role="button" href="@Url.Action("Sondage")">Sondage</a></li>
                <li><a role="button" href="@Url.Action("Vote")">Vote</a></li>
                <li><a role="button" href="@Url.Action("Resultat")">Resultat</a></li>
                <li><a role="button" href="@Url.Action("Suppression")">Supprimer</a></li>
                <li class="btnRecherche"><input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search"></li>
                <li id="btnRecherche"><button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button></li>
            </ul>
        </nav> <!-- menu -->
    </header>
    <div>


    </div>

    <aside>

        <div class="formulaire">
            <form class="form" action="@Url.Action("")" method="post">

                <fieldset>
                    <legend>Qualité<abbr title="Ce champ est obligatoire">*</abbr></legend>
                    <input type="radio" required name="title"  value="Mr"><label for="r1">M.</label>
                    <input type="radio" required name="title" id="r2" value="Ms"><label for="r2">Mme.</label>
                </fieldset>

                <h1>Question</h1>

                <input name="Question" id="r1" class="question" type="text" placeholder="Entrez votre question" >


                <div class="mm1">
                    <label for="Rep1">Reponse N°1:</label>
                    <input name="Reponse" class="Reponse" type="text" placeholder="Entrez votre Réponse" required>
                </div>
                <div class="mm2">
                    <label for="Rep2">Reponse N°2:</label>
                    <input name="Reponse" class="Reponse" type="text" placeholder="Entrez votre Réponse" required>
                </div>

                <div class="mm1">
                    <input name="checkbox" class="" type="checkbox" id="checkbox">
                    <label>
                        Autoriser les Réponses multiples
                    </label>
                </div>

                <div class="boutonformulaire">
                    <input onclick="afficherPopupInformation" class="valider" type="submit" id="fff" value="Valider le quetionnaire" /> @*<input class="valider" type="submit" value="Annuler" />*@
                </div>

            </form>
        </div>

    </aside>

    <footer>Copyright © 2018 sondagegold.com All rights reserved</footer>
